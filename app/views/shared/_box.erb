<% unless @box_options[:location]
	raise SiteDevError.new("@box_options[:location] is required!");
   end
%>
<% content_for( @box_options[:location] ) do %>
<div class="box-top"></div><div class="box-body">

<% if @box_options[:title] -%>
<div class="h2">
	<h2 class="<%= @box_options[:title_class] %>" style="display:inline"><%= h @box_options[:title] %></h2>
	<% if @box_options[:subtitle] -%>
		 - <h3 style="display:inline"><%= h @box_options[:subtitle] %></h3>
	<% end %>
</div>
<% end -%> 
<% if i = @box_options[:image] 
	unless i.kind_of?(Hash) 
		raise SiteDevError.new(":image should be a hash of options including :src" )
	end
	i[:border] ||= 0
	i[:float] ||= "left"
	i[:class] ||= "image"
%>
	<%= image_tag( i.delete(:src), i ) %>
<% end %>
	<%= yield %>
</div>
<% end %>
