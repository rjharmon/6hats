<h1>New thought</h1>

<% form_for(@thought) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :hat_id %><br />
    <%= f.text_field :hat_id %>
  </p>
  <p>
    <%= f.label :summary %><br />
    <%= f.text_field :summary %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', thoughts_path %>
