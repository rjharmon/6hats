<h1>Editing thought</h1>

<% form_for([@topic, @thought]) do |f| %>
  <%= f.error_messages %>
# TODO: add hat dropdown
  <p>
    <%= f.label :summary %><br />
    <%= f.text_field :summary %>
  </p>
  <p>
    <%= f.label :detail %><br />
    <%= f.text_area :detail %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', [@topic, @thought] %> |
<%= link_to 'Back', topic_thoughts_path(@topic) %>
