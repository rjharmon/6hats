<% content_for :instructions do %>
<% end %>

<% content_for :right do %>
<div style="border:1px solid black">
  Next:
  <% form_tag( next_state_path(@topic) ) do %>
    <%= image_submit_tag( "/images/next.gif", :border => 0 ) %>
  <% end %>
</div>
Current hat: <%=h @topic.current_hat %>
<% end %>

<% if content = yield(:layout) -%>
<%=  content %>
<% else %>
  <% if @topic.new_record?
    raise SiteDevError.new( "When @topic is an unsaved record, you must provide a block to render :layout => 'topic'" )
  end %>
<% end %>


